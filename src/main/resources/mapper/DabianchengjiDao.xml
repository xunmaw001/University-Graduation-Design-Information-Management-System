<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.DabianchengjiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.DabianchengjiEntity" id="dabianchengjiMap">
        <result property="ketimingcheng" column="ketimingcheng"/>
        <result property="dabianchengji" column="dabianchengji"/>
        <result property="dabianjieguo" column="dabianjieguo"/>
        <result property="dabianpingjia" column="dabianpingjia"/>
        <result property="daoshigonghao" column="daoshigonghao"/>
        <result property="xuehao" column="xuehao"/>
        <result property="xueshengxingming" column="xueshengxingming"/>
        <result property="pingfenshijian" column="pingfenshijian"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.DabianchengjiVO" >
		SELECT * FROM dabianchengji  dabianchengji         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.DabianchengjiVO" >
		SELECT  dabianchengji.* FROM dabianchengji  dabianchengji
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.DabianchengjiView" >

		SELECT  dabianchengji.* FROM dabianchengji  dabianchengji 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.DabianchengjiView" >
		SELECT * FROM dabianchengji  dabianchengji <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM dabianchengji
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 10
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM dabianchengji
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM dabianchengji
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM dabianchengji
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>
   
    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM dabianchengji  
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



	
</mapper>
